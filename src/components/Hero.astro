---
import { HeroBackground } from "./HeroBackground";
import HeroContent from "./HeroContent.astro";
import HeroImage from "./HeroImage.astro";
---

<section
  class="grid h-[610px] grid-cols-7 justify-items-center items-center relative overflow-hidden"
>
  <HeroBackground client:load />
  <HeroContent />
  <HeroImage />
</section>

<style is:inline>
  .text {
    position: relative;
    user-select: none;
    cursor: default;
  }

  .text .text-bottom {
    animation: myanim 3.5s 0.5s 1 forwards;
  }

  @keyframes myanim {
    0% {
      transform: scale(1);
      opacity: 1;
    }

    75% {
      transform: scale(1.25);
      opacity: 0;
    }

    100% {
      transform: scale(1);
      opacity: 0;
    }
  }
</style>

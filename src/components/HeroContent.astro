---
import Button from "./Button.astro";
import FacebookIcon from "../icons/FacebookIcon.astro";
import InstagramIcon from "../icons/InstagramIcon.astro";
import WhatsappIcon from "../icons/WhatsappIcon.astro";
---

<div class="relative h-full grid grid-rows-3 col-span-4 bg-blue-200">
  <div class="row-span-1"></div>
  <div class="row-span-2 z-20 flex flex-col items-end">
    <div class="flex flex-col justify-between h-full">
      <div>
        <h1 class="text-5xl font-bold mb-7">
          <p class="w-fit text-lg font-semibold text-red-700 leading-tight">
            / ATENDEMOS TODO TIPO DE MARCAS Y MODELOS <br />
          </p>
          Servicio de Mantenimiento <br />Y Reparaciones Avanzadas
        </h1>
        <Button />
      </div>
      <div class="mb-10 w-full flex">
        <span class="mr-4 font-semibold"> We are in Socials </span>
        <div class="flex gap-5 items-center">
          <FacebookIcon />
          <InstagramIcon />
          <WhatsappIcon />
        </div>
      </div>
    </div>
  </div>
</div>
